{
  "manifest_version": 3,
  "name": "DragCopyPaste",
  "version": "1.0",
  "description": "When you drag the text, it is automatically copied, right-clicking will paste it.",
  "permissions": ["clipboardRead", "clipboardWrite", "contextMenus"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "DragCopyPaste"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
